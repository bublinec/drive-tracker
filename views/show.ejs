<%- include("partials/header") %> 

<div class="container">
    <div class="row">
        <!-- <div class="col-md-3"></div> -->
        <div class="col-md-8">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= pond.image %> " alt="<%= pond.name %>">
                <div class="caption">
                    <h2><%= pond.name %></h2>
                    <p><%= pond.description %> </p>
                </div>

            </div>
            <div class="well">
                <!-- display comments -->
                <% pond.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-1">
                            <strong><%= comment.author.username %> </strong>
                        </div>
                        <div class="col-md-11">
                            <p>
                                <%= comment.text %>
                                <span id="comment_time" class="pull-right">10 days ago</span>
                            </p>
                        </div>
                    </div>
                <hr>
                <% }) %>

                <!-- new comment form -->
                <% if(current_user) {%> 
                    <form action="/ponds/<%= pond._id %>/comments" method="post">
                        <div class="row">
                            <div class="col-md-1">
                                <label><%= current_user.username %> </label>
                            </div>
                            <div class="col-md-11">
                            <div class="input_and_button">
                                <input class="form-control" id="comment_input" type="text" name="comment_text" placeholder="Add comment">
                                <input class="btn btn-success" type="submit" value="Submit">
                            </div>
                        </div>    
                    </form>
                <% } %> 
            </div>
        </div>

    </div>






</div>

<%- include("partials/footer") %> 
